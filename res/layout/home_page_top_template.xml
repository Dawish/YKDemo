<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:padding="20dp" >
    
	<include 
	    android:id="@+id/top_0"
	    android:layout_width="@dimen/home_top_item_width"
    	android:layout_height="@dimen/home_top_item_height"
	    layout="@layout/home_page_top_item"
	    android:layout_alignParentLeft="true"
	    android:layout_alignParentTop="true"/>
	
	<include 
	    android:id="@+id/top_1"
	    android:layout_width="@dimen/home_top_item_width"
    	android:layout_height="@dimen/home_top_item_height"
	    layout="@layout/home_page_top_item"
	    android:layout_toRightOf="@id/top_0"
	    android:layout_alignTop="@id/top_0"
	    android:layout_marginLeft="5dp"/>
	
	<include 
	    android:id="@+id/top_2"
	    android:layout_width="@dimen/home_top_item_width"
    	android:layout_height="@dimen/home_top_item_height"
	    layout="@layout/home_page_top_item"
	    android:layout_toRightOf="@id/top_1"
	    android:layout_alignTop="@id/top_1"
	    android:layout_marginLeft="5dp"/>
</RelativeLayout>
