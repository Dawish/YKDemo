<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="YoukuTVDialog">
        <item name="android:windowBackground">@color/gallery_backgroud</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>
    <style name="dialogButtonStyle" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">@dimen/px33</item>
        <item name="android:textColor">@color/dialog_bt_textcolor</item>
        <item name="android:background">@drawable/sl_btn</item>
        <item name="android:focusable">true</item>
        <item name="android:visibility">gone</item>
        <item name="android:layout_width">@dimen/px200</item>
        <item name="android:layout_height">@dimen/px60</item>
        <item name="android:layout_marginLeft">@dimen/px60</item>
        <item name="android:layout_marginRight">@dimen/px60</item>
        <item name="android:text"></item>
    </style>
    <style name="PayDialog">
        <item name="android:windowBackground">@color/color_b3000000</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>
    <style name="filter_item">
        <item name="android:textSize">@dimen/px28</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:paddingTop">@dimen/px4</item>
        <item name="android:paddingBottom">@dimen/px4</item>
    </style>
    <style name="filter_item_head_title">
        <item name="android:textSize">@dimen/px40</item>
        <item name="android:textColor">@color/filter_item_head_color</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
    </style>
    <style name="editTextStyle">
        <item name="android:textSize">@dimen/px24</item>
        <item name="android:textColor">@color/edittext_textcolor</item>
        <item name="android:background">@drawable/edit_text_selector</item>
        <item name="android:paddingLeft">@dimen/px24</item>
        <item name="android:paddingRight">@dimen/px30</item>
        <item name="android:layout_height">@dimen/px112</item>
        <item name="android:singleLine">true</item>
        <item name="android:drawablePadding">@dimen/px14</item>
    </style>
    <style name="home_bottom_button">
        <item name="android:textSize">@dimen/px48</item>
        <item name="android:textColor">@color/dialog_bt_textcolor</item>
        <item name="android:background">@drawable/sl_btn</item>
        <item name="android:paddingLeft">@dimen/px40</item>
        <item name="android:paddingTop">@dimen/px20</item>
        <item name="android:paddingRight">@dimen/px40</item>
        <item name="android:paddingBottom">@dimen/px20</item>
        <item name="android:focusable">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/px65</item>
        <item name="android:layout_marginRight">@dimen/px65</item>
        <item name="android:text">rr</item>
    </style>
    <style name="login_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@color/login_dialog_background</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Translucent</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>
    <style name="drama_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@color/login_dialog_background</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowFullscreen">true</item>
    </style>
    <style name="detail_info_text">
        <item name="android:textSize">@dimen/px30</item>
        <item name="android:includeFontPadding">false</item>
    </style>
    <style name="PopupAnimation" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/fade_in_anim</item>
        <item name="android:windowExitAnimation">@anim/fade_out_anim</item>
    </style>
    <style name="RecommendChangingDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:textSize">@dimen/px30</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:paddingLeft">@dimen/px8</item>
        <item name="android:paddingRight">@dimen/px8</item>
    </style>
    <style name="AppBaseTheme" parent="@android:style/Theme.Black" />
    <style name="AppTheme" parent="@style/AppBaseTheme" />
</resources>
